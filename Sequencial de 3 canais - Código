const int ledG = 2;
const int ledY = 3;
const int ledR = 4;

void setup() {
  pinMode(ledG, OUTPUT);
  pinMode(ledY, OUTPUT);
  pinMode(ledR, OUTPUT);
}

void loop() {
  digitalWrite(ledG, HIGH);
  delay(1000);
  digitalWrite(ledG, LOW); digitalWrite(ledY, HIGH);
  delay(1000);
  digitalWrite(ledY, LOW); digitalWrite(ledR, HIGH);
  delay(1000);
  digitalWrite(ledR, LOW);
}
